{
    "name": "ministryofjustice/website-builder-buddy",
    "description": "Adds a friendly sidebar chatbot called Builder Buddy to the Gutenberg editor.",
    "type": "wordpress-plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {},
    "require-dev": {
        "composer/composer": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "phpcs-config-set": "phpcs --config-set ignore_warnings_on_exit 1 && phpcs --config-set installed_paths vendor/squizlabs/php_codesniffer/src/Standards",
        "phpcs": "phpcs --extensions=php --ignore=*/vendor/* --standard=PSR12 .",
        "phpcbf": "phpcbf --extensions=php --ignore=*/vendor/* --standard=PSR12 ."
    }
}
